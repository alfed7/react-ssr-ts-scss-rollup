{
  "name": "react-ssr-ts-scss-rollup",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:alfed7/react-ssr-ts-scss-rollup.git",
  "author": "Alexander Fedorenko <alfedmix@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tsc": "npm-run-all tsc:design-system tsc:web tsc:server",
    "dev-client": "npm-run-all --parallel dev:design-system dev:web",
    "dev": "npm run tsc & npm-run-all --parallel watch:design-system watch:web dev:server",
    "build": "npm-run-all build:design-system build:web build:server",
    "storybook": "npm-run-all --parallel storybook:design-system",
    "start": "npm-run-all build start:server",
    "test": "npm run test --workspaces",
    "tsc:design-system": "npm --workspace @webssr/design-system run tsc",
    "dev:design-system": "npm --workspace @webssr/design-system run dev",
    "watch:design-system": "npm --workspace @webssr/design-system run watch",
    "build:design-system": "npm --workspace @webssr/design-system run build",
    "start:design-system": "npm --workspace @webssr/design-system run start",
    "test:design-system": "npm --workspace @webssr/design-system run test",
    "storybook:design-system": "npm --workspace @webssr/design-system run storybook",
    "tsc:web": "npm --workspace @webssr/web run tsc",
    "dev:web": "npm --workspace @webssr/web run dev",
    "watch:web": "npm --workspace @webssr/web run watch",
    "build:web": "npm --workspace @webssr/web run build",
    "start:web": "npm --workspace @webssr/web run start",
    "test:web": "npm --workspace @webssr/web run test",
    "tsc:server": "npm --workspace @webssr/server run tsc",
    "dev:server": "npm --workspace @webssr/server run dev",
    "build:server": "npm --workspace @webssr/server run build",
    "start:server": "npm --workspace @webssr/server run start",
    "test:server": "npm --workspace @webssr/server run test"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "0.4.3",
    "@svgr/rollup": "8.1.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "autoprefixer": "^10.4.16",
    "jest": "^29.6.4",
    "node-sass": "^9.0.0",
    "postcss": "8.4.31",
    "postcss-url": "^10.1.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-workbox": "^8.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "npm-run-all": "^3.1.1"
  }
}
